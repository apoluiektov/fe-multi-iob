{
  "root": true,
  "ignorePatterns": ["**/*"],
  "plugins": ["@nrwl/nx"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "@nrwl/nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": true,
            "allow": [],
            "depConstraints": [
              {
                "sourceTag": "scope:packages",
                "onlyDependOnLibsWithTags": ["scope:packages"]
              },
              {
                "sourceTag": "scope:back-office",
                "onlyDependOnLibsWithTags": [
                  "scope:packages",
                  "scope:back-office"
                ]
              },
              {
                "sourceTag": "scope:front-office",
                "onlyDependOnLibsWithTags": [
                  "scope:packages",
                  "scope:front-office"
                ]
              },
              {
                "sourceTag": "type:e2e",
                "onlyDependOnLibsWithTags": [
                  "type:app",
                  "type:data-access",
                  "type:features",
                  "type:ui",
                  "type:utils"
                ]
              },
              {
                "sourceTag": "type:app",
                "onlyDependOnLibsWithTags": [
                  "type:data-access",
                  "type:features",
                  "type:ui",
                  "type:utils"
                ]
              },
              {
                "sourceTag": "type:features",
                "onlyDependOnLibsWithTags": [
                  "type:data-access",
                  "type:features",
                  "type:ui",
                  "type:utils"
                ]
              },
              {
                "sourceTag": "type:data-access",
                "onlyDependOnLibsWithTags": ["type:data-access", "type:utils"]
              },
              {
                "sourceTag": "type:ui",
                "onlyDependOnLibsWithTags": ["type:ui", "type:utils"]
              },
              {
                "sourceTag": "type:utils",
                "onlyDependOnLibsWithTags": ["type:utils"]
              }
            ]
          }
        ]
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "extends": ["plugin:@nrwl/nx/typescript"],
      "rules": {
        "@typescript-eslint/no-explicit-any": "error"
      }
    },
    {
      "files": ["*.js", "*.jsx"],
      "extends": ["plugin:@nrwl/nx/javascript"],
      "rules": {}
    }
  ]
}
