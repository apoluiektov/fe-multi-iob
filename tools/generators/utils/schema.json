{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "$id": "utils",
  "type": "object",
  "properties": {
    "scope": {
      "type": "string",
      "description": "Scope name",
      "default": "packages"
    },
    "name": {
      "type": "string",
      "description": "Library name",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    }
  },
  "required": ["name"]
}
